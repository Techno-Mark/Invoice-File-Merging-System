{
    "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "standard"
    ],
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "eqeqeq": "off",
      "quotes": "off",
      "react/prop-types": 0,
      "react-hooks/rules-of-hooks": "error", 
      "react-hooks/exhaustive-deps": "off", 
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "never",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "multiline-ternary": "off",
      "react/react-in-jsx-scope": "off",
      "react/no-unknown-property": [
        2,
        {
          "ignore": [
            "amp-custom",
            "global",
            "on",
            "custom-element",
            "custom-template",
            "option",
            "on",
            "items",
            "fallback",
            "update",
            "item"
          ]
        }
      ]
    },
    "globals": {
      "React": "writable"
    },
    "root": true
  }